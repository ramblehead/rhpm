#!/bin/bash

set -eu
set -o pipefail

SPATH="$(dirname "${BASH_SOURCE[0]}")"
if [[ ! -d "${SPATH}" ]]; then SPATH="${PWD}"; fi
readonly SPATH="$(cd -P "${SPATH}" && pwd)"

readonly PRJ_PATH="${SPATH}"

# shellcheck source=./conf
source "${PRJ_PATH}/conf"

# shellcheck disable=SC2153
cd "${PKG_PATH}" && echo + cd "$PWD"

CMD=(rm -vrf "${SRC_PATH}")
echo + "${CMD[@]}" && "${CMD[@]}"
