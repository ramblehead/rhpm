#!/bin/bash

set -eu
set -o pipefail

SDPATH="$(dirname "${BASH_SOURCE[0]}")"
if [[ ! -d "${SDPATH}" ]]; then SDPATH="${PWD}"; fi
readonly SDPATH="$(cd -P "${SDPATH}" && pwd)"

CMD=("${SDPATH}/emacs-29.0.60-29")
CMD+=("--init-directory=~/.config/emacs-29")
CMD+=("$@")
echo + "${CMD[@]}" && "${CMD[@]}"
