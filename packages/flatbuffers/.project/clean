#!/bin/bash

set -eu
set -o pipefail

SDPATH="$(dirname "${BASH_SOURCE[0]}")"
if [[ ! -d "${SDPATH}" ]]; then SDPATH="${PWD}"; fi
readonly SDPATH="$(cd -P "${SDPATH}" && pwd)"

readonly PRJ_PATH="${SDPATH}"
source "${PRJ_PATH}/conf"

cd ${SRC_PATH}; echo + cd ${PWD}

# discard stuff from last build
echo
CMD="git reset --hard"; echo + ${CMD} && ${CMD}

# Go back to master HEAD
echo
CMD="git checkout master"; echo + ${CMD} && ${CMD}

# delete all of the last build stuff
echo
CMD="git clean -xdf"; echo + ${CMD} && ${CMD}

echo
CMD="rm -vrf ${BLD_PATH}"; echo + ${CMD} && ${CMD}
