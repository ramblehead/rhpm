#!/bin/bash

set -eu
set -o pipefail

SPATH="$(dirname "${BASH_SOURCE[0]}")"
if [[ ! -d "${SPATH}" ]]; then SPATH="${PWD}"; fi
readonly SPATH="$(cd -P "${SPATH}" && pwd)"

readonly PRJ_PATH="${SPATH}"
source "${PRJ_PATH}/conf"

cd "${SRC_PATH}"; echo + cd ${PWD}

echo
CMD=(./bootstrap.sh --with-python=python3); echo ${CMD[@]} && ${CMD[@]}
