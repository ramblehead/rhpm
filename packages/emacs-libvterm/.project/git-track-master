#!/bin/bash

set -eu
set -o pipefail

SPATH="$(dirname "${BASH_SOURCE[0]}")"
if [[ ! -d "${SPATH}" ]]; then SPATH="${PWD}"; fi
readonly SPATH="$(cd -P "${SPATH}" && pwd)"

readonly PRJ_PATH="${SPATH}"
source "${PRJ_PATH}/conf"

cd "${SRC_PATH}" && echo + cd ${PWD}

echo
CMD=(git checkout master)
echo + ${CMD[@]} && "${CMD[@]}"

echo
CMD=(git submodule update --recursive --remote)
echo + ${CMD[@]} && "${CMD[@]}"

echo
CMD=(git pull)
echo + ${CMD[@]} && "${CMD[@]}"

readonly hash=$(git rev-parse --short=11 HEAD)
readonly version=$(date "+%Y-%m-%d")

echo
CMD=(sed -i -E "s/^(readonly SRC_VERSION)=.*$/\1=${hash}/" ${PRJ_PATH}/conf)
echo + ${CMD[@]} && "${CMD[@]}"

echo
CMD=(sed -i -E "s/^(readonly BLD_VERSION)=.*$/\1=${version}/" ${PRJ_PATH}/conf)
echo + ${CMD[@]} && "${CMD[@]}"
