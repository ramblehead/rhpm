#!/bin/bash

# https://stackoverflow.com/a/13478622
set -eu
set -o pipefail

SPATH="$(dirname "${BASH_SOURCE[0]}")"
if [[ ! -d "${SPATH}" ]]; then SPATH="${PWD}"; fi
readonly SPATH="$(cd -P "${SPATH}" && pwd)"

readonly PRJ_PATH="${SPATH}"
source "${PRJ_PATH}/conf"

cd "${SRC_PATH}/${BLD_DIR_NAME}" && echo + cd ${PWD}

echo
CMD=(make -j${NPROC})
echo + ${CMD[@]} && "${CMD[@]}"
