readonly BLD_NAME=${BLD_VERSION}_${SRC_VERSION}
readonly STOW_NAME=${PKG_NAME}_${BLD_NAME}

NPROC=$(let m=$(nproc)-1; (($m > 0)) && echo $m || echo 1)
