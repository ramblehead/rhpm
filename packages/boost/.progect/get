#!/bin/bash

set -eu
set -o pipefail

SPATH="$(dirname "${BASH_SOURCE[0]}")"
if [[ ! -d "${SPATH}" ]]; then SPATH="${PWD}"; fi
readonly SPATH="$(cd -P "${SPATH}" && pwd)"

readonly PRJ_PATH="${SPATH}"
source "${PRJ_PATH}/conf"

if [[ ! -d "${SRC_PATH}" || \
      (-d "${SRC_PATH}" && -z "$(ls -A ${SRC_PATH})") ]];
then
  CMD=(git clone --recursive https://github.com/boostorg/boost.git ${SRC_PATH})
  echo + ${CMD[@]} && "${CMD[@]}"

  CMD=(git fetch --all --tags --recurse-submodules=yes --jobs=${NPROC})
  echo + ${CMD[@]} && "${CMD[@]}"
else
  cd "${SRC_PATH}"; echo cd ${PWD}

  CMD=(git fetch --all --tags --recurse-submodules=yes --jobs=${NPROC})
  echo + ${CMD[@]} && "${CMD[@]}"
fi
